generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  role      Role      @default(USER)
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id            String         @id @default(cuid())
  title         String
  description   String
  techStack     String[]
  repoUrls      String[]
  imageUrl      String
  documentation String
  youtubeUrl    String?
  stages        ProjectStage[]
  author        User          @relation(fields: [authorId], references: [id])
  authorId      String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model ProjectStage {
  id            String   @id @default(cuid())
  title         String
  description   String
  techStack     String[]
  imageUrl      String
  documentation String
  youtubeUrl    String?
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}